<div class="container mt-4">
      <h1>Edit House</h1>
      <form name="edit-house" action="/houses?_method=PATCH" method="POST">
				<!-- title -->
        <small>Short Title</small>
        <input name="title" class="form-control mb-2" type="text" value="{{house.title}}" />
				<!-- description -->
        <small>Description</small>
        <label for="exampleFormControlTextarea1" class="form-label mb-2"></label
        ><textarea
          class="form-control mb-2"
          id="exampleFormControlTextarea1"
          rows="3"
          placeholder=""
          name="description"
        ></textarea>
				<!-- rooms -->
        <small>Number of Rooms</small>
        <input type="number" class="form-control mb-2" />
				<!-- location -->
        <small>Location</small>
        <select name="location" type="number" class="form-select mb-2" default="">
          <option selected></option>
          <option value="1">Koh Phangan</option>
          <option value="2">Koh Samui</option>
          <option value="3">Bali</option>
          <option value="4">Denver</option>
          <option value="5">Las Vegas</option>
          <option value="6">Mexico City</option>
        </select>
				<!-- price -->
        <small>Price(per night)</small>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
					name="price"
          type="number"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
					placeholder=""
          />
        </div>
				<!-- photos -->
        <small>Add Photos(up to 9)</small>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <div class="mb-2">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
          />
        </div>
        <button class="btn btn-success mb-2">Save Changes</button>
        <button type="button" class="btn btn-danger d-block mb-5">
          Delete House
        </button>
      </form>
    </div>
