<div class="container mt-4">
      <h1>Edit House</h1>
      <form name="edit-house" action="/houses/{{house._id}}?_method=PATCH" method="POST">
				<!-- title -->
        <small>Short Title</small>
        <input name="title" class="form-control mb-2" type="text" value="{{house.title}}" />
				<!-- description -->
        <small>Description</small>
        <label for="exampleFormControlTextarea1" class="form-label mb-2"></label
        ><textarea
          class="form-control mb-2"
          id="exampleFormControlTextarea1"
          rows="3"
					name="description"
        >{{house.description}}</textarea>
				<!-- rooms -->
        <small>Number of Rooms</small>
        <input type="number" class="form-control mb-2" value="{{house.rooms}}"/>
				<!-- location -->
        <small>Location</small>
        <select name="location" type="number" class="form-select mb-2" >
          <option selected></option>
          <option value="1">Koh Phangan</option>
          <option value="2">Koh Samui</option>
          <option value="3">Bali</option>
          <option value="4">Denver</option>
          <option value="5">Las Vegas</option>
          <option value="6">Mexico City</option>
        </select>
				<!-- price -->
        <small>Price(per night)</small>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
					name="price"
          type="number"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
					value="{{house.price}}"
          />
        </div>
				<!-- photos -->
        <small>Add Photos(up to 9)</small>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						value="{{house.photos.[0]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[1]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[2]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[3]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[4]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[5]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[6]}}"
          />
        </div>
        <div class="mb-1">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[7]}}"
          />
        </div>
        <div class="mb-2">
          <input
            class="form-control"
            type="text"
            placeholder="http://..."
            aria-label="default input example"
						name="photos"
						value="{{house.photos.[8]}}"
          />
        </div>
        <button class="btn btn-success mb-2">Save Changes</button>
        <button type="button" class="btn btn-danger d-block mb-5">
          Delete House
        </button>
      </form>
    </div>
