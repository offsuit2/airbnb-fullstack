<div class="img-bg">
      <div class="main-box ">
        <form
				  action="/auth/signup"
					method="post"
					name="Signup"
          class="welcome position-absolute top-50 start-50 translate-middle "
        >
          <!-- logo -->
          <div class="card">
            <div class="card-body m-2 " style="width: 400px;">
              <div class="text-center">
                <img
                  src="https://res.cloudinary.com/dsko6ntfj/image/upload/v1642399114/portal/web%20development%20beginners/05%20Project%20Airbnb/assets/logo-airbnb.png"
                  alt=""
                />
              </div>
              <!-- form info -->

              <small>Your Full Name</small>
              <input
							  name="name"
                class="form-control"
                type="text"
                aria-label="default input example"
              />
              <small>Profile Picture</small>
              <input
							name="avatar"
                class="form-control"
                type="text"
                placeholder="http://..."
                aria-label="default input example"
              />
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label"
                  >Email</label
                >
                <input
								name="email"
                  type="email"
                  class="form-control"
                  id="exampleFormControlInput1"
                />
                <label for="inputPassword" class="">Password</label>
                <input
								name="password"
                  type="password"
                  class="form-control"
                  id="inputPassword"
                />
                <button class="btn btn-success my-2">
                  Signup
                </button>
                <div>
                  <small>Already have an account?<a href="">Login</a></small>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
